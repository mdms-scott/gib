= form_for(@subforum) do |f|
  = f.error_messages
  %fieldset
    %legend
      Information
    %p
      = f.label :title
      %br
      = f.text_field :title
    %p
      = f.label :description
      %br
      = f.text_area :description
    %p
      = f.label :is_private
      %br
      = f.select :is_private, Subforum::PRIVATE, :prompt => "Private?"
  %p
    = f.submit
    or
    %a.cancel_link{ :href => subforums_path } Cancel
  