= form_for(@topic) do |f|
  = f.error_messages
  %fieldset
    %legend
      Information
    %p
      = f.label :title
      %br
      = f.text_field :title
    %p
      = f.label :description
      %br
      = f.text_area :description
      
    = f.hidden_field :subforum_id
  %p
    = f.submit
    or
    %a.cancel_link{ :href => subforum_path(@topic.subforum) } Cancel
